# Required for all configurations
SECRET_KEY=your-secret-key-here

# APL (Application Permission List) Configuration
# Options: "file", "dynamodb", "mongodb", "saleor-cloud"
APL=mongodb

# MongoDB Configuration (when APL=mongodb)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=saleor_stripe

# DynamoDB Configuration (when APL=dynamodb)
# DYNAMODB_MAIN_TABLE_NAME=saleor-stripe-table
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Saleor Cloud APL Configuration (when APL=saleor-cloud)
# REST_APL_ENDPOINT=https://your-saleor-cloud-endpoint
# REST_APL_TOKEN=your-saleor-cloud-token

# Application Configuration
APP_LOG_LEVEL=info
PORT=3000
APP_API_BASE_URL=http://localhost:3000
APP_IFRAME_BASE_URL=http://localhost:3000

# Stripe Configuration
STRIPE_PARTNER_ID=your-stripe-partner-id

# Optional Configuration
ALLOWED_DOMAIN_PATTERN=.*
MANIFEST_APP_ID=saleor.app.payment.stripe
OTEL_ENABLED=false
OTEL_SERVICE_NAME=saleor-app-payment-stripe
OTEL_ACCESS_TOKEN=your-otel-token
REPOSITORY_URL=https://github.com/saleor/apps
APPSTORE_URL=https://apps.saleor.io
APP_NAME=Stripe

# Sentry Configuration (optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Environment
NODE_ENV=development
ENV=local
